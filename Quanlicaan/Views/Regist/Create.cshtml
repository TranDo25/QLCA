@model Models.Framework.NhanVien
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Regist</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!--=====================================================================-->
    <link rel="stylesheet" href="~/css/regist.css">
</head>
<body>
    <div class="limiter">
        <div class="container-regist">
            <div class="wrap-regist">
                @using (Html.BeginForm(new { @class = "regist-form validate-form" }))
                {
                    @Html.AntiForgeryToken()
                    <h1 class="regist-form-title">
                        Đăng kí thông tin Nhân Viên
                    </h1>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="wrap-input validate-input" data-validate="User's id is required">
                        @Html.TextBoxFor(model => model.ID, new { @class = "input", @type = "text", @name = "id", @placeholder = "Mã nhân viên", htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
                        <span class="focus-input"></span>
                        <span class="symbol-input">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="wrap-input validate-input" data-validate="User's fullname is required">
                        @Html.TextBoxFor(model => model.HoTen, new { @class = "input", @type = "text", @name = "HoTen", @placeholder = "Họ tên nhân viên", htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                        <span class="focus-input"></span>
                        <span class="symbol-input">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="select-department" data-validate="Registration is required">
                        @Html.DropDownList("Giới Tính", new List<SelectListItem>
                            {
                                new SelectListItem {Text = "Nam", Value = "true"},
                                new SelectListItem {Text = "Nữ", Value = "false"},
                            }, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })
                        <span class="focus-input"></span>
                        <span class="symbol-input">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="wrap-input validate-input" data-validate="User's fullname is required">
                        @Html.TextBoxFor(model => model.DiaChi, new { @class = "input", @type = "text", @name = "DiaChi", @placeholder = "Địa Chỉ", htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                        <span class="focus-input"></span>
                        <span class="symbol-input">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="wrap-input validate-input" data-validate="User's fullname is required">
                        @Html.TextBoxFor(model => model.SDT, new { @class = "input", @type = "text", @name = "SDT", @placeholder = "SDT", htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                        <span class="focus-input"></span>
                        <span class="symbol-input">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="wrap-input validate-input" data-validate="Username is required">
                        @Html.TextBoxFor(model => model.username, new { @class = "input", @type = "text", @name = "username", @placeholder = "Tên đăng nhập", htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                        <span class="focus-input"></span>
                        <span class="symbol-input">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="wrap-input validate-input" data-validate="Password is required">
                        @Html.TextBoxFor(model => model.upassword, new { @class = "input", @type = "password", @name = "pass", @placeholder = "Mật khẩu", htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.upassword, "", new { @class = "text-danger" })
                        <span class="focus-input"></span>
                        <span class="symbol-input">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>

                    <p>Mã phòng ban</p>

                    <div class="select-department" data-validate="Department is required">
                        @*@Html.LabelFor(model => model.idphongban, "Mã phòng ban", htmlAttributes: new { @class = "container-checkbox" })*@
                        @Html.DropDownList("idphongban", new List<SelectListItem>
                            {
                                new SelectListItem {Text = "Nhân Sự", Value = "pb001"},
                                new SelectListItem {Text = "Kế Toán", Value = "pb002"},
                                new SelectListItem {Text = "Kinh Doanh", Value = "pb003"},
                                new SelectListItem {Text = "Quản Lí", Value = "pb004"},
                                new SelectListItem {Text = "Bảo vệ", Value = "pb005"},
                                new SelectListItem {Text = "Kĩ Thuật", Value = "pb006"}
                            }, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IDPhongBan, "", new { @class = "text-danger" })
                        <span class="focus-input"></span>
                        <span class="symbol-input">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>
                    /*
                    <p>Quyền đăng kí</p>

                    <div class="select-department" data-validate="Registration is required">
                        @*@Html.LabelFor(model => model.quyendangky, "Quyền đăng kí", htmlAttributes: new { @class = "container-checkbox" })*@
                        @Html.DropDownList("quyendangky", new List<SelectListItem>
                            {
                                new SelectListItem {Text = "Cá nhân", Value = "true"},
                                new SelectListItem {Text = "Tập thể", Value = "false"},
                            }, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.quyendangky, "", new { @class = "text-danger" })
                        <span class="focus-input"></span>
                        <span class="symbol-input">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>
                    */
                    <p>Phân quyền</p>

                    <div class="select-department" data-validate="Registration is required">
                        @Html.DropDownList("ChucVu", new List<SelectListItem>
                            {
                                new SelectListItem {Text = "NhanVien", Value = "Nhan vien"},
                                new SelectListItem {Text = "Admin", Value = "admin"},
                            }, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ChucVu, "", new { @class = "text-danger" })
                        <span class="focus-input"></span>
                        <span class="symbol-input">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>

                    <p>Trạng thái</p>

                    <div class="select-department" data-validate="Status is required">
                        @*@Html.LabelFor(model => model.trangthai, "Trạng thái", htmlAttributes: new { @class = "container-checkbox" })*@
                        @Html.DropDownList("trangthai", new List<SelectListItem>
                            {
                                new SelectListItem {Text = "Active", Value = "true"},
                                new SelectListItem {Text = "Inactive", Value = "false"},
                            }, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.trangthai, "", new { @class = "text-danger" })
                        <span class="focus-input"></span>
                        <span class="symbol-input">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="container-login-form-btn">
                        <button class="login-form-btn" type="submit">
                            Đăng kí
                        </button>
                    </div>
                }

            </div>
        </div>
    </div>
</body>
</html>
